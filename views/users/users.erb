<% if @users.count == 1 %>
    <p class="alert alert-info">За съжалание в блога няма други потребители все още!</p>
<% else %>
    <table class="table table-striped">
     <thead>
        <tr>
            <th>E-mail</th>
            <th>Name</th>
            <th>Control</th>
        </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.email %></td>
                    <td><%= user.name %></td>
                    <td>Изтрии</td>
                </tr>
            <% end %>
        </tbody>
        </table>

<% end %>
