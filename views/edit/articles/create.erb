<table class="table table-striped">
    <h3>Нова статия</h3>
</table>    

<form method="POST" action="/edit/articles/create" enctype="multipart/form-data">
    <div class="form-group">
    <img id="picture-preview" src="#" height="250"/>
    <div class="clear"></div>
    <label>Картинка:</label>
    <input id="picture" type="file" name="picture">
    </div>

    <ul class="nav nav-tabs" style="margin:25px 0;">
        <li class="active"><a data-toggle="tab" href="#article-bulgarian">Български</a></li>
        <li><a data-toggle="tab" href="#article-english">Английски</a></li>
    </ul>

    <div class="tab-content">
        <div id="article-bulgarian" class="tab-pane fade in active">
            <div class="form-group">
                <label>Заглавие:</label>
                <input type="text" class="form-control" name="title-bg" placeholder="Заглавие" value="1" required>
            </div> 
            <div class="form-group">
                <label>Текст:</label>
                <textarea class="article-text form-control" name="text-bg">2</textarea>
            </div>
        </div>
        <div id="article-english" class="tab-pane fade">
            <div class="form-group">
                <label>Заглавие:</label>
                <input type="text" class="form-control" name="title-en" value="4" placeholder="E-mail" required>
            </div>
            <div class="form-group">
                <label>Текст:</label>
                <textarea class="article-text form-control" name="text-en">5</textarea>
            </div>
        </div>
    </div>
     <div class="form-group">
        <label>Тагове:</label>
        <input type="text" class="form-control" name="tags" data-role="tagsinput" value="3" placeholder="Tags" required>
    </div>  
    <button type="submit" class="btn btn-default">Публикувай</button>
</form>

<script>
    $('.article-text').wysihtml5({
        toolbar: {
        fa: true
        }
    });

    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#picture-preview').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#picture").change(function(){
        readURL(this);
    });

</script>