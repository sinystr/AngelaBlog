
<% if flash[:error] %>
    <p class="alert alert-danger"><%= flash[:error] %></p>
<% end %>

<% if flash[:success] %>
    <p class="alert alert-success"><%= flash[:success] %></p>
<% end %>

<% if @articles.empty? %>
    <p class="alert alert-info">За съжалание в блога няма публикувани статии все още!</p>
<% else %>
    <% @articles.each do |article| %>
        <div class="row article">
            <div class="col-md-4">
                <img src="/article_pictures/<%= article.picture %>" width="210" class="left">
            </div>
            <div class="col-md-8">
                <h3><%= article.title %></h2>
                <p><%= article.description %></p>
                <input type="button" class="btn btn-primary" value="Прочети още" onclick="location.href = '/articles/?article_id=<%= article.id %>';">
                <div class="row" style="margin-top:15px;">
                    <div class="col-md-2 right"><a href="/edit/articles/delete?id=<%= article.id %>">Изтрий</a></div>
                    <div class="col-md-2 right">
                        <a href="/edit/articles/edit?id=<%= article.id %>">Промени</a>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
<% end %>